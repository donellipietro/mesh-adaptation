// LogEuclidean metric utils

func bool logTensorFiled(mesh &Th, real[int][int] &Dh0, real[int][int] &logDh0) {
    for(int i = 0; i < Dh0[0].n; i++) {
        real[int, int] Di(2,2);
        Di(0,0) = Dh0[0][i];
        Di(0,1) = Dh0[1][i];
        Di(1,0) = Dh0[1][i];
        Di(1,1) = Dh0[2][i];
        complex[int] ev(2);
        complex[int, int] eV(2, 2);
        dgeev(Di, ev, eV);
        real[int] r1i = [real(eV(0,0)), real(eV(1,0))];
        real[int] r2i = [real(eV(0,1)), real(eV(1,1))];
        logDh0[0][i] = log(real(ev[0])) * r1i[0]^2 + log(real(ev[1])) * r1i[1]^2;
        logDh0[1][i] = log(real(ev[0])) * r1i[0]*r2i[0] + log(real(ev[1])) * r1i[1]*r2i[1];
        logDh0[2][i] = log(real(ev[0])) * r2i[0]^2 + log(real(ev[1])) * r2i[1]^2;
    }
    // cout << logDh0 << endl;
    return(true);
}

func bool expTensorFiled(mesh &Th, real[int][int] &Dh0, real[int][int] &expDh0) {
    for(int i = 0; i < Dh0[0].n; i++) {
        real[int, int] Di(2,2);
        Di(0,0) = Dh0[0][i];
        Di(0,1) = Dh0[1][i];
        Di(1,0) = Dh0[1][i];
        Di(1,1) = Dh0[2][i];
        complex[int] ev(2);
        complex[int, int] eV(2, 2);
        dgeev(Di, ev, eV);
        real[int] r1i = [real(eV(0,0)), real(eV(1,0))];
        real[int] r2i = [real(eV(0,1)), real(eV(1,1))];        
        expDh0[0][i] = exp(real(ev[0])) * r1i[0]^2 + exp(real(ev[1])) * r1i[1]^2;
        expDh0[1][i] = exp(real(ev[0])) * r1i[0]*r2i[0] + exp(real(ev[1])) * r1i[1]*r2i[1];
        expDh0[2][i] = exp(real(ev[0])) * r2i[0]^2 + exp(real(ev[1])) * r2i[1]^2;
    }
    return(true);
}

func bool tensorAveragingNodes(mesh &Th, real[int][int] &Dh0, real[int][int] &Dh0av) {

    real[int][int] logDh0(3);
    logDh0[0].resize(Th.nt);
    logDh0[1].resize(Th.nt);
    logDh0[2].resize(Th.nt);
    logTensorFiled(Th, Dh0, logDh0);

    int ndof = Dh0av[0].n;
    real[int][int] logDhav(3);
    logDhav[0].resize(ndof);
    logDhav[0] = averagingNodes(Th, logDh0[0], -1e9, 1e9);
    logDhav[1].resize(ndof);
    logDhav[1] = averagingNodes(Th, logDh0[1], -1e9, 1e9);
    logDhav[2].resize(ndof);
    logDhav[2] = averagingNodes(Th, logDh0[2], -1e9, 1e9);

    expTensorFiled(Th, logDhav, Dh0av);
    return(true);
    
}



// EVD

func bool EVD(real[int, int] &M, real[int] &ev, real[int, int] &eV) {
    complex[int] cev(2);
    complex[int, int] ceV(2, 2);
    dgeev(M, cev, ceV);
    if(real(cev[0]) > real(cev[1])){
        ev[0] = real(cev[0]);
        ev[1] = real(cev[1]);
        eV(0,0) = real(ceV(0,0));
        eV(1,0) = real(ceV(1,0));
        eV(0,1) = real(ceV(0,1));
        eV(1,1) = real(ceV(1,1));
    } else {
        ev[0] = real(cev[1]);
        ev[1] = real(cev[0]);
        eV(0,0) = real(ceV(0,1));
        eV(1,0) = real(ceV(1,1));
        eV(0,1) = real(ceV(0,0));
        eV(1,1) = real(ceV(1,0));
    }
    if(ev[0]<=0) ev[0] = 1e-18;
    if(ev[1]<=0) ev[1] = 1e-18;
}