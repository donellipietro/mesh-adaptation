// Patch

func int[int] getPatch(mesh &Th, int k) {
    
    int[int] Chi(Th.nt);
    for (int i = 0; i < 3; i++) {
        for (int j = 0; j < Th.nt; j++) {
            if(!Chi[j]) {
                if ( (Th[j][0] == Th[k][i]) || (Th[j][1] == Th[k][i]) || (Th[j][2] == Th[k][i]) ) {
                    // patch.resize(patch.n + 1);
                    // patch[patch.n - 1] = Th[j];
                    Chi[j] = true;
                }
            }
        }
    }
    
    int[int] patch(0);
    for (int j = 0; j < Th.nt; j++) {
        if(Chi[j]){
            patch.resize(patch.n + 1);
            patch[patch.n - 1] = j;
        }
    }

    return patch;
}

